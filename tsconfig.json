{
  "compilerOptions": {
    "baseUrl": ".",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "forceConsistentCasingInFileNames": true,
    "module": "commonjs",
    "moduleResolution": "node",
    "noUnusedLocals": true,
    "outDir": "build",
    "paths": { "*": ["typings/*"] },
    "removeComments": true,
    "rootDir": "src",
    "target": "es2018",
    "incremental": true
  }
}
